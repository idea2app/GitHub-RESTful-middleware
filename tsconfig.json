{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "checkJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "include": ["core/*.js"],
    "typedocOptions": {
        "name": "GitHub RESTful middleware",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md"
    }
}
